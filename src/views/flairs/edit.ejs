<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <style>
        body{background-image: url("/images/landingPic2.jpeg");
        background-size:cover;
        color: white;
        -webkit-background-size: 100% 100%;
        -moz-background-size: 100% 100%;
        -o-background-size: 100% 100%;
        height: 100vh;
        background-position: center center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        }
      </style>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1 style="margin-top:2%">Edit Flair</h1>

      <form action="/topics/<%= flair.topicId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Edit name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
            <label for="color">Flair color</label>
            <select name="color">
                <option value="red">Red</option>
                <option value="green">Green</option>
                <option value="yellow">Yellow</option>
                <option value="blue">Blue</option>
            </select>
          </div>
        
      <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>